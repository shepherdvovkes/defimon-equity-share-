{
  "name": "defimon-equity-share",
  "version": "1.0.0",
  "description": "DEFIMON Equity Token with AI-Powered Security Audit System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "frontend": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "add-participants": "hardhat run scripts/add-participants.js --network sepolia",
    "check-participants": "hardhat run scripts/check-participants.js --network sepolia"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "openai": "^4.20.1",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "defi",
    "equity",
    "token",
    "vesting",
    "security",
    "audit",
    "ai",
    "openai",
    "ethereum",
    "solidity"
  ],
  "author": "DEFIMON Team",
  "license": "MIT"
}
